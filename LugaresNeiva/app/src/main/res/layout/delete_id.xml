<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toStartOf="@+id/aviso"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/advertencia" />

    <TextView
        android:id="@+id/aviso"
        android:layout_width="314dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:padding="@dimen/text_margin"
        android:text="¿Está seguro que desea eliminar el registro?"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Button
        android:id="@+id/bt_si"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginStart="72dp"
        android:background="@color/primary"
        android:text="Si"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/aviso" />

    <Button
        android:id="@+id/bt_no"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginEnd="40dp"
        android:background="@color/primary"
        android:text="No"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/aviso"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintStart_toEndOf="@+id/bt_si"
        app:layout_constraintTop_toBottomOf="@+id/aviso" />

</androidx.constraintlayout.widget.ConstraintLayout>